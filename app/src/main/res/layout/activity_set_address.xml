<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardBottomSheet"
        android:background="@color/background">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:text="YOUR NEW ADDRESS"
            android:textColor="@color/mainText"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:drawableRight="@null"
                android:layout_marginBottom="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textAd"
                android:background="@drawable/rounder_border_littlebit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter your name"
                android:maxLines="1" />

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:drawableRight="@null"
                android:layout_marginBottom="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textAd"
                android:background="@drawable/rounder_border_littlebit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter your phone number"
                android:inputType="number"
                android:maxLines="1" />

            <Spinner
                android:id="@+id/citySpinner_cardAddBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/mainText"
                android:background="@drawable/rounder_border_littlebit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Select City/Province"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/districtSpinner_cardAddBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/mainText"
                android:background="@drawable/rounder_border_littlebit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Select District"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/wardSpinner_cardAddBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/mainText"
                android:background="@drawable/rounder_border_littlebit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Select Ward"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/address_cardAddBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:drawableRight="@null"
                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textAd"
                android:background="@drawable/rounder_border_littlebit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter your street, building, ..."
                android:maxLines="1" />

            <Button
                android:id="@+id/addCardBtn_cardAddBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                android:text="COMPLETE"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:layout_marginBottom="40dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>