<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_my_order_details_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_gradient_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/toolbar_title_paddingStart"
            android:paddingEnd="0dp"
            android:text="THÔNG BÁO"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_text_size"
            android:textStyle="bold"
            android:paddingLeft="@dimen/toolbar_title_paddingStart"
            android:paddingRight="0dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_my_order_details_activity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@+id/upper_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@+id/middle_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cartImage"
                    android:layout_width="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_discount_code"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/my_order_details_content_marginStartEnd"
                    android:layout_marginTop="@dimen/my_order_details_content_marginTopBottom"
                    android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                    android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                    android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                    android:text="Khuyến mãi"
                    android:textColor="@color/item_value_text_color"
                    android:textSize="@dimen/my_order_details_lbl_textSize" />

                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/my_order_details_content_marginStartEnd"
                    android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                    android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                    android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                    android:text="Mã abc giảm đến 300.000đ"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/my_order_details_lbl_textSize" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_pink_cart"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_order_details_content_marginStartEnd"
                        android:layout_marginTop="@dimen/my_order_details_content_marginTopBottom"
                        android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                        android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                        android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                        android:text="Cập nhật đơn hàng"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/my_order_details_lbl_textSize" />

                    <TextView
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_order_details_content_marginStartEnd"
                        android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                        android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                        android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                        android:text="Đơn hàng của bạn đã được xác nhận. Chúng tôi..."
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/my_order_details_lbl_textSize"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_payment"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_order_details_content_marginStartEnd"
                        android:layout_marginTop="@dimen/my_order_details_content_marginTopBottom"
                        android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                        android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                        android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                        android:text="Thông tin tài chính"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/my_order_details_lbl_textSize" />

                    <TextView
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_order_details_content_marginStartEnd"
                        android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                        android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                        android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                        android:text="Mã giảm 50k dành riêng cho bạn mới khi sử dụng"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/my_order_details_lbl_textSize"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@+id/upper_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@+id/middle_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="@dimen/my_order_details_content_marginTopBottom"
                android:layout_marginEnd="@dimen/my_order_details_content_marginStartEnd"
                android:paddingTop="@dimen/my_order_details_content_lbl_padding"
                android:paddingBottom="@dimen/my_order_details_content_lbl_padding"
                android:text="Thông báo mới nhất"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/my_order_details_lbl_textSize" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_my_order_items_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                app:layout_constraintTop_toBottomOf="@+id/middle_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>