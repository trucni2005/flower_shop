<!-- res/drawable/custom_card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Left Sawtooth Shape -->
    <item
        android:left="20dp"
        android:right="10dp"
        android:top="20dp"
        android:bottom="20dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#fff" />
            </shape>
        </rotate>
    </item>

    <!-- Right Sawtooth Shape -->
    <item
        android:left="10dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#fff" />
            </shape>
        </rotate>
    </item>
</layer-list>
